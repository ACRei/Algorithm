{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "CPPBuild",
			"command": "g++",
			"args": ["-g", "-O2", "-std=c++20", "${file}", "-o", "${fileDirname}/${fileBasenameNoExtension}.exe"],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": ["$gcc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: g++"
		}
	]
}